<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Ecoinfinite Nexus- Customers</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        /* Include all your CSS here (same as the reference) */
        :root {
            --primary: #28821c;
            --secondary: #3f37c9;
            --accent: #4895ef;
            --danger: #f72585;
            --success: #4cc9f0;
            --warning: #f8961e;
            --light: #f8f9fa;
            --dark: #212529;
        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        body {
            display: flex;
            background-color: #f5f7fa;
        }
        .sidebar {
            width: 250px;
            background: white;
            height: 100vh;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            position: fixed;
            transition: all 0.3s;
        }
        .sidebar-header {
            padding: 20px;
            background: var(--primary);
            color: white;
            display: flex;
            align-items: center;
        }
        .sidebar-header h3 {
            margin-left: 10px;
        }
        .sidebar-menu {
            padding: 20px 0;
        }
        .sidebar-menu li {
            list-style: none;
            margin-bottom: 5px;
        }
        .sidebar-menu a {
            display: flex;
            align-items: center;
            padding: 12px 20px;
            color: var(--dark);
            text-decoration: none;
            transition: all 0.3s;
        }
        .sidebar-menu a:hover, .sidebar-menu a.active {
            background: #e9ecef;
            border-left: 4px solid var(--primary);
        }
        .sidebar-menu i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }
        .main-content {
            flex: 1;
            margin-left: 250px;
            padding: 20px;
            transition: all 0.3s;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            border-radius: 5px;
            margin-bottom: 20px;
        }
        .user-info {
            display: flex;
            align-items: center;
        }
        .user-info img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }
        .user-dropdown {
            position: relative;
            cursor: pointer;
        }
        .user-dropdown span {
            display: flex;
            align-items: center;
            gap: 5px;
            color: var(--dark);
        }
        .dropdown-menu {
            display: none;
            position: absolute;
            top: 40px;
            right: 0;
            background: white;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            z-index: 100;
            min-width: 150px;
        }
        .dropdown-menu a {
            display: block;
            padding: 10px 15px;
            color: var(--dark);
            text-decoration: none;
        }
        .dropdown-menu a:hover {
            background: #f1f1f1;
        }
        /* Table Styles */
        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: var(--primary);
            color: white;
        }
        tr:hover {
            background-color: #f1f1f1;
        }
        /* Responsive */
        @media (max-width: 992px) {
            .sidebar {
                width: 80px;
            }
            .sidebar-header h3, .sidebar-menu span {
                display: none;
            }
            .sidebar-menu a {
                justify-content: center;
                padding: 15px 0;
            }
            .sidebar-menu i {
                margin-right: 0;
                font-size: 1.2rem;
            }
            .main-content {
                margin-left: 80px;
            }
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <i class="fas fa-home fa-2x"></i>
            <h3>Ecoinfinite Nexus</h3>
        </div>
        <ul class="sidebar-menu">
            <li><a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i><span>Dashboard</span></a></li>
            <li><a href="/admin/customers" class="active"><i class="fas fa-users"></i><span>Customers details</span></a></li>
            <li><a href="/admin/waste"><i class="fas fa-user-tie"></i><span>Waste Collection</span></a></li>
            <!-- <li><a href="/admin/handicrafts"><i class="fas fa-concierge-bell"></i><span>Handicraft Products</span></a></li> -->
            <li><a href="/admin/payments"><i class="fas fa-calendar-check"></i><span>Payments Details</span></a></li>
            <li><a href="/admin/settings"><i class="fas fa-cog"></i><span>Settings</span></a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="header">
            <h2>Customers Details</h2>
            <div class="user-info">
                <img src="https://t3.ftcdn.net/jpg/00/07/32/48/360_F_7324855_mx4CEBWTr81XLOrlQccCROtP2uNR7xbk.jpg" alt="Admin" />
                <div class="user-dropdown" id="userDropdown">
                    <span id="dropdownToggle">Admin <i class="fas fa-caret-down"></i></span>
                    <div class="dropdown-menu" id="dropdownMenu">
                        <a href="/admin/profile"><i class="fas fa-user"></i> Profile</a>
                        <a href="/admin/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customers Table -->
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>wastetype</th>
                </tr>
            </thead>
            <tbody>
                <% if (customerData && customerData.length > 0) { %>
  <% customerData.forEach((customer, index) => { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= customer.user.username %></td>
      <td><%= customer.user.email %></td>
      
      <td>
        <% if (customer.wastes.length > 0 && customer.wastes[0].phone) { %>
          <%= customer.wastes[0].phone %>
        <% } else { %>
          Not Available
        <% } %>
      </td>

      <td>
        <% if (customer.wastes.length > 0) { %>
          <% customer.wastes.forEach(waste => { %>
            <span><%= waste.wasteType %></span><br>
          <% }); %>
        <% } else { %>
          <span>No waste submissions</span>
        <% } %>
      </td>
    </tr>
  <% }); %>
<% } else { %>
  <tr>
    <td colspan="6" style="text-align:center; padding: 20px;">No customers found.</td>
  </tr>
<% } %>


            </tbody>
        </table>
    </div>

<script>
    // Dropdown toggle
    const dropdownToggle = document.getElementById('dropdownToggle');
    const dropdownMenu = document.getElementById('dropdownMenu');

    dropdownToggle.addEventListener('click', () => {
        dropdownMenu.style.display = dropdownMenu.style.display === 'block' ? 'none' : 'block';
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', (e) => {
        if (!document.getElementById('userDropdown').contains(e.target)) {
            dropdownMenu.style.display = 'none';
        }
    });
</script>

</body>
</html>
