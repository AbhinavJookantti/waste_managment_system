<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Ecoinfinite Nexus- Payments</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>
      :root {
        --primary: #28821c;
        --secondary: #3f37c9;
        --accent: #4895ef;
        --danger: #f72585;
        --success: #4cc9f0;
        --warning: #f8961e;
        --light: #f8f9fa;
        --dark: #212529;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }

      body {
        display: flex;
        background-color: #f5f7fa;
      }

      /* Sidebar Styles */
      .sidebar {
        width: 250px;
        background: white;
        height: 100vh;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        position: fixed;
        transition: all 0.3s;
      }

      .sidebar-header {
        padding: 20px;
        background: var(--primary);
        color: white;
        display: flex;
        align-items: center;
      }

      .sidebar-header h3 {
        margin-left: 10px;
      }

      .sidebar-menu {
        padding: 20px 0;
      }

      .sidebar-menu li {
        list-style: none;
        margin-bottom: 5px;
      }

      .sidebar-menu a {
        display: flex;
        align-items: center;
        padding: 12px 20px;
        color: var(--dark);
        text-decoration: none;
        transition: all 0.3s;
      }

      .sidebar-menu a:hover,
      .sidebar-menu a.active {
        background: #e9ecef;
        border-left: 4px solid var(--primary);
      }

      .sidebar-menu i {
        margin-right: 10px;
        width: 20px;
        text-align: center;
      }

      /* Main Content Styles */
      .main-content {
        flex: 1;
        margin-left: 250px;
        padding: 20px;
        transition: all 0.3s;
      }

      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
        background: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
        margin-bottom: 20px;
      }

      .user-info {
        display: flex;
        align-items: center;
      }

      .user-info img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 10px;
      }

      .cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 20px;
      }

      .card {
        background: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
      }

      .card-header h3 {
        font-size: 16px;
        color: #6c757d;
      }

      .card-body h2 {
        font-size: 28px;
        margin-bottom: 10px;
      }

      .card-footer {
        margin-top: 15px;
        font-size: 14px;
        color: #6c757d;
      }

      .card-footer i {
        margin-right: 5px;
      }

      .bg-primary {
        background: var(--primary);
        color: white;
      }

      .bg-success {
        background: var(--success);
        color: white;
      }

      .bg-warning {
        background: var(--warning);
        color: white;
      }

      .bg-danger {
        background: var(--danger);
        color: white;
      }

      /* Responsive */
      @media (max-width: 992px) {
        .sidebar {
          width: 80px;
        }

        .sidebar-header h3,
        .sidebar-menu span {
          display: none;
        }

        .sidebar-menu a {
          justify-content: center;
          padding: 15px 0;
        }

        .sidebar-menu i {
          margin-right: 0;
          font-size: 1.2rem;
        }

        .main-content {
          margin-left: 80px;
        }
      }

      @media (max-width: 768px) {
        .cards {
          grid-template-columns: 1fr 1fr;
        }
      }

      @media (max-width: 576px) {
        .cards {
          grid-template-columns: 1fr;
        }
      }

      .user-dropdown {
        position: relative;
        cursor: pointer;
      }

      .user-dropdown span {
        display: flex;
        align-items: center;
        gap: 5px;
        color: var(--dark);
      }

      .dropdown-menu {
        display: none;
        position: absolute;
        top: 40px;
        right: 0;
        background: white;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        z-index: 100;
        min-width: 150px;
      }

      .dropdown-menu a {
        display: block;
        padding: 10px 15px;
        color: var(--dark);
        text-decoration: none;
      }

      .dropdown-menu a:hover {
        background: #f1f1f1;
      }

      /* Razorpay Dashboard Button Style */
      .razorpay-btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: var(--primary);
        color: white;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        margin-bottom: 20px;
      }
      .razorpay-btn:hover {
        background-color: var(--secondary);
      }
    </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="sidebar-header">
      <i class="fas fa-home fa-2x"></i>
      <h3>Ecoinfinite Nexus</h3>
    </div>
    <ul class="sidebar-menu">
      <li><a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i><span>Dashboard</span></a></li>
      <li><a href="/admin/customers"><i class="fas fa-users"></i><span>Customers Details</span></a></li>
      <li><a href="/admin/waste"><i class="fas fa-trash"></i><span>Waste Collection</span></a></li>
      <!-- <li><a href="/admin/handicrafts"><i class="fas fa-concierge-bell"></i><span>Handicraft Products</span></a></li> -->
      <li><a href="/admin/payments" class="active"><i class="fas fa-calendar-check"></i><span>Payments Details</span></a></li>
      <li><a href="/admin/settings"><i class="fas fa-cog"></i><span>Settings</span></a></li>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <div class="header">
      <h2>Payments</h2>
      <div class="user-info">
        <img
          src="https://t3.ftcdn.net/jpg/00/07/32/48/360_F_7324855_mx4CEBWTr81XLOrlQccCROtP2uNR7xbk.jpg"
          alt="Admin"
        />
        <div class="user-dropdown" id="userDropdown">
          <span id="dropdownToggle"
            >Admin <i class="fas fa-caret-down"></i
          ></span>
          <div class="dropdown-menu" id="dropdownMenu">
            <a href="/admin/profile"><i class="fas fa-user"></i> Profile</a>
            <a href="/admin/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Razorpay Dashboard Link -->
    <a
      href="https://dashboard.razorpay.com/app/dashboard"
      target="_blank"
      rel="noopener noreferrer"
      class="razorpay-btn"
      >Open Razorpay Dashboard</a
    >

    <!-- Example Payments Cards -->
    

    <!-- You can add your payment tables, charts, or other payment details below -->

  </div>

  <script>
    // Dropdown toggle script
    const dropdownToggle = document.getElementById("dropdownToggle");
    const dropdownMenu = document.getElementById("dropdownMenu");

    dropdownToggle.addEventListener("click", () => {
      if (dropdownMenu.style.display === "block") {
        dropdownMenu.style.display = "none";
      } else {
        dropdownMenu.style.display = "block";
      }
    });

    // Close dropdown if clicked outside
    window.addEventListener("click", (e) => {
      if (
        e.target !== dropdownToggle &&
        !dropdownMenu.contains(e.target)
      ) {
        dropdownMenu.style.display = "none";
      }
    });
  </script>
</body>
</html>
